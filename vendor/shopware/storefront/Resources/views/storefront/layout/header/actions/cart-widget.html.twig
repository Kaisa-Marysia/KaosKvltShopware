{% block layout_header_actions_cart_widget %}
    <span class="header-cart-icon">
        {% sw_icon 'bag' %}
    </span>
    {% if page.cart.lineItems|length > 0 %}
        <span class="badge bg-primary header-cart-badge" style="color: white;">{{ page.cart.lineItems|length }}</span>
    {% endif %}
    <span class="header-cart-total" style="color:white;">
        {{ page.cart.price.positionPrice|currency }}{{ 'general.star'|trans|sw_sanitize }}
    </span>
{% endblock %}
